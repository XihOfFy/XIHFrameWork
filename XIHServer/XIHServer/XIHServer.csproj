<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <StartupObject>XIHServer.Program</StartupObject>
    <Nullable>annotations</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;XIHSERVER</DefineConstants>
    <OutputPath>..\Res\ServerBin\</OutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;XIHSERVER</DefineConstants>
    <OutputPath>..\Res\ServerBin\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="LitJson" Version="0.17.0" />
    <PackageReference Include="log4net" Version="2.0.12" />
    <PackageReference Include="protobuf-net" Version="3.0.101" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Include="..\..\Assets\XIHHotFix\XIHNet\Runtime\Crypt\**\*.cs">
      <Link>XIHHotFix\XIHNet\Runtime\Crypt\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>
	<Compile Include="..\..\Assets\XIHHotFix\XIHNet\Runtime\ProtoBuf\**\*.cs">
      <Link>XIHHotFix\XIHNet\Runtime\ProtoBuf\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>
	<Compile Include="..\..\Assets\XIHHotFix\XIHNet\Runtime\Util\**\*.cs">
      <Link>XIHHotFix\XIHNet\Runtime\Util\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>

	<Compile Include="..\..\Assets\XIHHotFix\XIHNet\Runtime\Mgr\KCP\Kcp.cs">
      <Link>XIHHotFix\XIHNet\Runtime\Mgr\KCP\Kcp.cs</Link>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Config\ServerCfg.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Config\Log4Net.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
